{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node10",
    "outDir": "cjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["lib/**/*.js"],
  "exclude": ["node_modules", "examples"]
}
